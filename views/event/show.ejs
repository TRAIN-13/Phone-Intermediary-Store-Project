













<%- include('../partials/header.ejs') -%>
<%- include('../partials/navbar.ejs') -%>
<div class="container">
<div class="row mt-4">
        
    <div class="col-md-9 offset-md-1"  >
        <div class="card" style="border-radius: 20px;">
            
            <!-- <div class="offset-md-4">
            <img src="/uploads/images/avatar-1541186458225.png" alt="">
            </div> -->

            <div class="card-body" style="background-color: #CBF1F5; border-radius: 20px; " >
                <br>
                <h3 class="card-title">  <%=event.title %></h3>
                <!-- <hr> --> <br> <br>
                <p class="card-text"><%=event.description%></p>
                <p>City: <%=event.location%></p>
                <p>Price: <%=event.price%></p>
                <p>Seller Number: <%=event.sellernumber%></p>
                <p>Release Date: <span class="badge badge-secondary"><%=event.date.toDateString()%></span></p>
                
                <% if ((user) && (user.id == event.user_id )) {%>
                    <a href="<%= '/events/edit/' + event.id %>" class="btn btn-primary">Edit</a>
                    <button class="btn btn-danger" onclick="deleteEvent()" id="deleteBtn" data-id="<%= event.id%>">Delete</button>
                <%}%>
                
            </div>
        </div>
        
    </div>

</div>

</div>

<%- include('../partials/footer.ejs') -%>